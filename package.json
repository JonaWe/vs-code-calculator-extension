{
  "name": "calculator",
  "displayName": "Simple Calculator",
  "description": "a simple calculator inside vs code",
  "publisher": "JonaWe",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:calculator.evaluate",
    "onCommand:calculator.reset"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "calculator.evaluate",
        "title": "Evaluate",
        "category": "Calculator"
      },
      {
        "command": "calculator.reset",
        "title": "Reset",
        "category": "Calculator"
      }
    ],
    "configuration": {
      "title": "Calculator",
      "properties": {
        "calculator.saveToClipboard": {
          "type": "boolean",
          "default": true,
          "description": "Specifies whether the result of a calculation is saved to the clipboard."
        }
      }
    },
    "keybindings": [
      {
        "command": "calculator.evaluate",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": ""
      },
      {
        "command": "calculator.reset",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": ""
      }
    ]
  },
  "homepage": "https://github.com/JonaWe/vs-code-calculator-extension#readme",
  "repository": {
    "url": "https://github.com/JonaWe/vs-code-calculator-extension/"
  },
  "bugs": {
    "url": "https://github.com/JonaWe/vs-code-calculator-extension/issues"
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.12.26",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "mathjs": "^9.4.4"
  }
}
